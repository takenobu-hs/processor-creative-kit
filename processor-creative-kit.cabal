                     bytestring >=0.10 && <0.11,
                     containers >=0.5 && <0.6,
                     mtl >=2.1 && <2.2,
                     split >=0.2 && <0.3,
                     array >=0.5 && <0.6,
                     attoparsec >=0.10 && <0.11
